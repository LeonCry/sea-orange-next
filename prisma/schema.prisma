generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

//每个section信息
model SectionInfo {
  id          Int    @id @default(autoincrement())
  path        String
  title       String
  description String

  @@map(name: "section_info")
}

//访问信息
model VisitTime {
  id        Int    @id @default(autoincrement())
  browser   String
  machine   String
  time      String
  path      String
  spendTime String

  @@map(name: "visit_time")
}

//Funny page 的项目信息
model FunnyPageItem {
  id          Int     @id @default(autoincrement())
  name        String
  description String
  icon        String
  path        String
  sorted      Int
  isShow      Boolean
  category    String
  sourceUrl   String

  @@map(name: "funny_page_item")
}

//Project page 的项目信息
model ProjectPageItem {
  id          Int     @id @default(autoincrement())
  name        String
  description String
  icon        String
  path        String
  sorted      Int
  isShow      Boolean
  category    String
  sourceUrl   String

  @@map(name: "project_page_item")
}
