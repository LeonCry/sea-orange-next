generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

//每个section信息
model SectionInfo {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  path        String
  title       String
  description String

  @@map(name: "section_info")
}

//访问信息
model VisitTime {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  browser   String
  machine   String
  time      String
  path      String
  spendTime String

  @@map(name: "visit_time")
}

//Funny page 的项目信息
model FunnyPageItem {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String
  icon        String
  path        String
  sorted      Int
  isShow      Boolean
  category    String
  sourceUrl   String

  @@map(name: "funny_page_item")
}

//Project page 的项目信息
model ProjectPageItem {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String
  icon        String
  path        String
  sorted      Int
  isShow      Boolean
  category    String
  sourceUrl   String

  @@map(name: "project_page_item")
}

//blog page 的项目信息
model BlogPageItem {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String
  icon        String
  path        String
  sorted      Int
  isShow      Boolean
  updateTime  DateTime @default(now())
  category    String
  file        String
  content     String

  @@map(name: "blog_page_item")
}

//camera page 的项目信息
model CameraPageItem {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String
  device      String
  path        String
  sorted      Int
  isShow      Boolean
  category    String
  photoSrc    String

  @@map(name: "camera_page_item")
}

//Gossip page 的项目信息
model GossipPageItem {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  userName       String
  commentContent String
  device         String
  brower         String
  isShow         Boolean
  date           DateTime @default(now())
  stars          Int
  headImg        String

  @@map(name: "Gossip_page_item")
}
